{
  "dashboard": {
    "title": "ISN.BIZ Website Monitoring",
    "tags": ["isn.biz", "website", "monitoring", "blackbox"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Website Status",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "probe_success{instance=\"https://isn.biz\"}",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "HTTP Status Code",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "probe_http_status_code{instance=\"https://isn.biz\"}",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 200,
                  "color": "green"
                },
                {
                  "value": 300,
                  "color": "yellow"
                },
                {
                  "value": 400,
                  "color": "orange"
                },
                {
                  "value": 500,
                  "color": "red"
                }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Response Time",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "probe_duration_seconds{instance=\"https://isn.biz\"}",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 2,
                  "color": "red"
                }
              ]
            },
            "unit": "s",
            "decimals": 3
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "SSL Certificate Days Until Expiry",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "(probe_ssl_earliest_cert_expiry{instance=\"https://isn.biz\"} - time()) / 86400",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 7,
                  "color": "orange"
                },
                {
                  "value": 30,
                  "color": "yellow"
                },
                {
                  "value": 60,
                  "color": "green"
                }
              ]
            },
            "unit": "days",
            "decimals": 0
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Response Time Over Time",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "probe_duration_seconds{instance=\"https://isn.biz\"}",
            "refId": "A",
            "legendFormat": "Response Time",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "showPoints": "never",
              "spanNulls": true
            },
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 2,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Uptime History",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "probe_success{instance=\"https://isn.biz\"}",
            "refId": "A",
            "legendFormat": "Status (1=UP, 0=DOWN)",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "fillOpacity": 50,
              "showPoints": "never",
              "spanNulls": false
            },
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            },
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 7,
        "type": "bargauge",
        "title": "HTTP Status Code Distribution (Last 24h)",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 17
        },
        "targets": [
          {
            "expr": "count_over_time(probe_http_status_code{instance=\"https://isn.biz\"}[24h])",
            "refId": "A",
            "legendFormat": "Status {{probe_http_status_code}}",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "type": "stat",
        "title": "Uptime Percentage (24h)",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 17
        },
        "targets": [
          {
            "expr": "avg_over_time(probe_success{instance=\"https://isn.biz\"}[24h]) * 100",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 95,
                  "color": "yellow"
                },
                {
                  "value": 99,
                  "color": "green"
                }
              ]
            },
            "unit": "percent",
            "decimals": 2,
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 9,
        "type": "stat",
        "title": "SSL Certificate Expiry Date",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 17
        },
        "targets": [
          {
            "expr": "probe_ssl_earliest_cert_expiry{instance=\"https://isn.biz\"} * 1000",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                }
              ]
            },
            "unit": "dateTimeAsIso"
          }
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  },
  "folderId": 0,
  "overwrite": false
}
